<MyGrid>:
	p_wins:p_wins.__self__
	com_wins:com_wins.__self__
	comp_choice:comp_choice.__self__
	p_choice:p_choice.__self__
	GridLayout:
		rows:6
		size: root.width-20, root.height-20
		pos: 10,10
		
		GridLayout:
			cols:2
			Label:
				bold:True
				text:"Player"
			Label:
				bold:True
				text:"Computer"
		GridLayout:
			cols:2
			Label:
				id:p_choice
				text:"Your choice is shown here"
			Label:
				id:comp_choice
				text:"The CPU's choice is shown here"
			
		GridLayout:
			cols:2
			Label:
				id:p_wins
				text:"0"
			Label:
				id:com_wins
				text:"0"
		
		GridLayout:
			cols:3
			Button:
				text:"Rock"
				on_press:root.rock()
			Button:
				text:"Paper"
				on_press:root.paper()
			Button:
				text:"Scissor"
				on_press:root.scissor()
		GridLayout:
			cols:2
			Button:
				text:"Submit"
				on_press:root.main()
			Button:
				text:"Reset"
				on_press:root.reset()
		GridLayout:
			cols:1
			Button:
				text:"Exit"
				on_press:app.stop()
