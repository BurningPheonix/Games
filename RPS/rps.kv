<MyGrid>:
	p_wins:p_wins.__self__
	com_wins:com_wins.__self__
	comp_choice:comp_choice.__self__
	p_choice:p_choice.__self__
	GridLayout:
		rows:6
		size: root.width-20, root.height-20
		pos: 10,10
		
		GridLayout:
			cols:2
			Label:
				bold:True
				text:"Player"
			Label:
				bold:True
				text:"Computer"
		GridLayout:
			cols:2
			Label:
				color:0,1,0,1
				id:p_choice
				text:"Your choice is shown here"
			Label:
				color:0,1,0,1
				id:comp_choice
				text:"The CPU's choice is shown here"
			
		GridLayout:
			cols:2
			Label:
				id:p_wins
				text:"0"
			Label:
				id:com_wins
				text:"0"
		
		GridLayout:
			cols:3
			Button:
				background_color:(0,0,1,1)
				text:"Rock"
				on_press:root.hand(-1)
			Button:
				background_color:(0,0,1,1)
				text:"Paper"
				on_press:root.hand(0)
			Button:
				background_color:(0,0,1,1)
				text:"Scissor"
				on_press:root.hand(1)
		GridLayout:
			cols:1
			Button:
				text:"Reset"
				on_press:root.reset()
		GridLayout:
			cols:1
			Button:
				text:"Exit"
				background_color: (1,0,0, 1.0)
				on_press:app.stop()
